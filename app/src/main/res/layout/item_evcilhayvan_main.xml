<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="95dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp">

        <ImageView
            android:id="@+id/imgAddPetMain"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/white_circle" />

        <TextView
            android:id="@+id/txtAddPetMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/red_hat_display"
            android:text="Ekle"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgAddPetMain"
            app:layout_constraintStart_toStartOf="@+id/imgAddPetMain"
            app:layout_constraintTop_toBottomOf="@+id/imgAddPetMain" />

        <ImageView
            android:id="@+id/imgAddPetPlusMain"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgAddPetMain"
            app:layout_constraintEnd_toEndOf="@+id/imgAddPetMain"
            app:layout_constraintStart_toStartOf="@+id/imgAddPetMain"
            app:layout_constraintTop_toTopOf="@+id/imgAddPetMain"
            app:srcCompat="@drawable/green_plus_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consItemPetMain"
        android:layout_width="70dp"
        android:layout_height="95dp"
        android:layout_marginStart="6dp"
        tools:layout_editor_absoluteX="76dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPetImageMain"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="#00EC6060"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pet_profile_white"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtMainItemPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/red_hat_display"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imgPetImageMain"
            app:layout_constraintStart_toStartOf="@+id/imgPetImageMain"
            app:layout_constraintTop_toBottomOf="@+id/imgPetImageMain" />

        <TextView
            android:id="@+id/txtMainItemPetUid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/imgPetImageMain"
            app:layout_constraintStart_toStartOf="@+id/imgPetImageMain"
            app:layout_constraintTop_toBottomOf="@+id/imgPetImageMain"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/txtMainItemPetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/imgPetImageMain"
            app:layout_constraintStart_toStartOf="@+id/imgPetImageMain"
            app:layout_constraintTop_toBottomOf="@+id/imgPetImageMain"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/txtMainItemPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/imgPetImageMain"
            app:layout_constraintStart_toStartOf="@+id/imgPetImageMain"
            app:layout_constraintTop_toBottomOf="@+id/imgPetImageMain"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/txtMainItemPetGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/imgPetImageMain"
            app:layout_constraintStart_toStartOf="@+id/imgPetImageMain"
            app:layout_constraintTop_toBottomOf="@+id/imgPetImageMain"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/txtMainItemPetWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/imgPetImageMain"
            app:layout_constraintStart_toStartOf="@+id/imgPetImageMain"
            app:layout_constraintTop_toBottomOf="@+id/imgPetImageMain"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="70dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>