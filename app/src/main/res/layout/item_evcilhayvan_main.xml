<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consItemEvcilMain"
        android:layout_width="82dp"
        android:layout_height="95dp"
        tools:layout_editor_absoluteX="76dp">

        <ImageView
            android:id="@+id/imgEkleEvcilhayvanMainArka"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="#00EC6060"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/white_circle" />

        <ImageView
            android:id="@+id/imgEkleEvcilhayvanMain"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imgEkleEvcilhayvanMainArka"
            app:layout_constraintEnd_toEndOf="@+id/imgEkleEvcilhayvanMainArka"
            app:layout_constraintStart_toStartOf="@+id/imgEkleEvcilhayvanMainArka"
            app:layout_constraintTop_toTopOf="@+id/imgEkleEvcilhayvanMainArka"
            app:srcCompat="@drawable/green_plus_icon" />

        <TextView
            android:id="@+id/txtEkleEvcilHayanMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/red_hat_display"
            android:text="Ekle"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imgEkleEvcilhayvanMainArka"
            app:layout_constraintStart_toStartOf="@+id/imgEkleEvcilhayvanMainArka"
            app:layout_constraintTop_toBottomOf="@+id/imgEkleEvcilhayvanMainArka" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>