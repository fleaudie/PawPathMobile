<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consKayitArka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D17D10"
    android:orientation="vertical"
    tools:context=".ui.SignUp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-70dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kayit_giris_arkaplan" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consKayit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/oval_kenar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consKayitOl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="174dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="118dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="118dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/red_hat_display"
                android:text="Kayıt Ol"
                android:textAlignment="center"
                android:textColor="#D17D10"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/imgIsim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imgIsim"
                android:layout_width="321dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/imgSoyisim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/yazi_kenarlik" />

            <EditText
                android:id="@+id/txtIsim"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignStart="@+id/imgIsim"
                android:layout_alignTop="@+id/imgIsim"
                android:layout_alignEnd="@+id/imgIsim"
                android:layout_alignBottom="@+id/imgIsim"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/red_hat_display"
                android:gravity="center_vertical"
                android:hint="İsim"
                android:textColorHint="#A6A6A6"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgIsim"
                app:layout_constraintEnd_toEndOf="@+id/imgIsim"
                app:layout_constraintStart_toStartOf="@+id/imgIsim"
                app:layout_constraintTop_toTopOf="@+id/imgIsim" />

            <ImageView
                android:id="@+id/imgSoyisim"
                android:layout_width="321dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="19dp"
                app:layout_constraintBottom_toTopOf="@+id/imgMail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgIsim"
                app:srcCompat="@drawable/yazi_kenarlik" />

            <EditText
                android:id="@+id/txtSoyisim"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignStart="@+id/imgSoyisim"
                android:layout_alignTop="@+id/imgSoyisim"
                android:layout_alignEnd="@+id/imgSoyisim"
                android:layout_alignBottom="@+id/imgSoyisim"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/red_hat_display"
                android:gravity="center_vertical"
                android:hint="Soyisim"
                android:textColorHint="#A6A6A6"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgSoyisim"
                app:layout_constraintEnd_toEndOf="@+id/imgSoyisim"
                app:layout_constraintStart_toStartOf="@+id/imgSoyisim"
                app:layout_constraintTop_toTopOf="@+id/imgSoyisim" />

            <ImageView
                android:id="@+id/imgMail"
                android:layout_width="321dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="19dp"

                app:layout_constraintBottom_toTopOf="@+id/imgSifre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgSoyisim"
                app:srcCompat="@drawable/yazi_kenarlik" />

            <EditText
                android:id="@+id/txtMail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignStart="@+id/imgMail"
                android:layout_alignTop="@+id/imgMail"
                android:layout_alignEnd="@+id/imgMail"
                android:layout_alignBottom="@+id/imgMail"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/red_hat_display"
                android:gravity="center_vertical"
                android:hint="Mail adresi"
                android:textColorHint="#A6A6A6"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toBottomOf="@+id/imgMail"
                app:layout_constraintEnd_toEndOf="@+id/imgMail"
                app:layout_constraintStart_toStartOf="@+id/imgMail"
                app:layout_constraintTop_toTopOf="@+id/imgMail" />

            <ImageView
                android:id="@+id/imgSifre"
                android:layout_width="321dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="19dp"
                app:layout_constraintBottom_toTopOf="@+id/imgSifreOnay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgMail"
                app:srcCompat="@drawable/yazi_kenarlik" />

            <EditText
                android:id="@+id/txtSifre"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignStart="@+id/imgSifre"
                android:layout_alignTop="@+id/imgSifre"
                android:layout_alignEnd="@+id/imgSifre"
                android:layout_alignBottom="@+id/imgSifre"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/red_hat_display"
                android:gravity="center_vertical"
                android:hint="Şifre"
                android:textColorHint="#A6A6A6"
                android:textSize="16sp"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="@+id/imgSifre"
                app:layout_constraintEnd_toEndOf="@+id/imgSifre"
                app:layout_constraintStart_toStartOf="@+id/imgSifre"
                app:layout_constraintTop_toTopOf="@+id/imgSifre" />

            <ImageView
                android:id="@+id/imgSifreOnay"
                android:layout_width="321dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toTopOf="@+id/imgbtnKayitOl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgSifre"
                app:srcCompat="@drawable/yazi_kenarlik" />

            <EditText
                android:id="@+id/txtSifreOnay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignStart="@+id/imgSifreOnay"
                android:layout_alignTop="@+id/imgSifreOnay"
                android:layout_alignEnd="@+id/imgSifreOnay"
                android:layout_alignBottom="@+id/imgSifreOnay"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/red_hat_display"
                android:gravity="center_vertical"
                android:hint="Şifrenizi doğrulayın"
                android:textColorHint="#A6A6A6"
                android:textSize="16sp"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="@+id/imgSifreOnay"
                app:layout_constraintEnd_toEndOf="@+id/imgSifreOnay"
                app:layout_constraintStart_toStartOf="@+id/imgSifreOnay"
                app:layout_constraintTop_toTopOf="@+id/imgSifreOnay" />

            <ImageButton
                android:id="@+id/imgbtnKayitOl"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="66dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/buton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgSifreOnay" />

            <TextView
                android:id="@+id/txtKayitOl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imgbtnKayitOl"
                android:layout_alignTop="@+id/imgbtnKayitOl"
                android:layout_alignEnd="@+id/imgbtnKayitOl"
                android:layout_alignBottom="@+id/imgbtnKayitOl"
                android:fontFamily="@font/red_hat_display"
                android:gravity="center_horizontal|center_vertical"
                android:text="Kayıt Ol"
                android:textColor="#D17D10"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgbtnKayitOl"
                app:layout_constraintEnd_toEndOf="@+id/imgbtnKayitOl"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="@+id/imgbtnKayitOl"
                app:layout_constraintTop_toTopOf="@+id/imgbtnKayitOl" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>